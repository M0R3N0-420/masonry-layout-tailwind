---
import "../styles/global.css";

const { image, title, description } = Astro.props;
---

<div class="flex justify-center items-center">
  <div
    class="w-full p-2 bg-white rounded-xl transform transition-all hover:-translate-y-2 duration-300 shadow-lg hover:shadow-2xl hover:cursor-pointer"
  >
    <a href="#">
      <img class="h-auto object-cover rounded-xl" src={image} alt={title} />
      <div class="p-2">
        <h2 class="font-bold text-lg">
          {title}
        </h2>
        <p class="text-sm text-gray-600">{description}</p>
      </div>
    </a>
  </div>
</div>
